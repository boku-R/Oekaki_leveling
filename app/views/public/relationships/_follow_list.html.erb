<% if users.exists? %>
  <table class="table caption-top table-borderless table-hover">
    <caption>フォロー一覧</caption>
      <tbody>
        <% users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user.id), method: :get do %>
                <%#= image_tag user.profile_image, size: "100x100", class:"rounded-circle d-block mx-auto" %><%#= user.handlename %>
                <%= image_tag user.get_profile_image(100,100),class: "mr-3 rounded-circle mx-auto" %>
              <% end %>
            </td>
            <td>
              <% if user != current_user && current_user.present? %>
                <% if current_user.following?(user) %>
                  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-danger" %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-success" %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
<div class="row d-flex flex-column align-items-center mt-3">
  <ul class="pagination">
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </ul>
</div>