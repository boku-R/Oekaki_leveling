<div class="container-fluid background_beige py-3">
  <div class="row">
    <div class="mx-auto">
      <%= render "public/users/topbar",user: current_user %>
    </div>
  </div>
</div>

<div class="container-fluid py-2">
  <div class="row mt-4">
    <div class="col-2">
      <%= render "public/users/sidebar",user: current_user %>
    </div>
    <div class="col-8 offset-md-1">
      <div class="row">
        <div class="h4"><i class="fas fa-tags"></i><%= @tag.name %> の投稿一覧</div>
      </div>
      <p class="pt-2 m-0">最近のタグ</p>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb shadow">
          <% @tag_list.each do |tag| %>
            <li class="breadcrumb-item"><i class="fas fa-tags"></i><%= link_to tag.name, search_tag_path(tag_id: tag.id) %><%="(#{tag.posts.where(is_deleted: false).count})" %></li>
          <% end %>
        </ol>
      </nav>
      <%= render "index",title: "",posts: @posts %>
    </div>
  </div>
</div>


