<h2>新規投稿</h2>

<%= flash[:notice] %>


<%= form_with model: @post, url: posts_path ,method: :post do |f| %>

  <p>タイトル</p>
  <%= f.text_field :title %>

  <p>説明</p>
  <%= f.text_area :introduction %>

  <%= f.fields_for :illusts do |i| %>
    <p>イラスト</p>
    <%= i.file_field :illust_image, accept: "image/png" %>
    <!--上から順に、イラストの種類(illust.step)をhidden_fieldで投入-->
    <%= i.hidden_field :step, value: @illust_step %> step:<%= @illust_step %>
    <% @illust_step = @illust_step + 1 %>
  <% end %>

  <p><%= f.submit '投稿する',class:"btn btn-success" %></p>
<% end %>
