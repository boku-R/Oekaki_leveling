<div class="container-fluid">
  <div class="row">
    <div class="d-flex flex-column align-items-center">
      <%= link_to user_path(user) do %>
        <%= image_tag user.get_profile_image(100,100), class: "mr-3 rounded-circle d-block mx-auto shadow" %>
      <% end %>
      <div class="text-center pt-3">
        <div id="follow_btn_<%= user.id %>">
          <%= render "public/users/follow", user: user %>
        </div>
        <div class="h3 pt-2"><%= user.handlename %></div>
        <div class="h5"> @<%= user.username %></div>
        <div class="h5"><i class="fas fa-palette"></i> Lv.<%= user.level %></div>
        <div class="h6"><%= user.introduction %></div>
      </div>
    </div>
  </div>
</div>