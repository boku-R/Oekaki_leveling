<div class="container-fluid background_beige py-3">
  <div class="row">
    <div class="mx-auto">
      <%= render "topbar",user: @user %>
    </div>
  </div>
</div>

<div class="container-fluid py-2 background_lightbeige">
  <div class="row mt-4">
    <div class="col-2">
      <%= render "sidebar",user: @user %>
    </div>
    <div class="col-8 offset-md-1">
      <div class="h3">いいね一覧</div>

      <div class="row">
        <% @favorite_illusts.each do |illust|%>
          <div class="card text-center m-1 shadow">
            <% if illust.post.is_deleted == false %>
              <%= link_to post_path(illust.post_id) do %>
                <p class="illust_back"><%= image_tag illust.illust_image.variant(gravity: :center, resize:"200x200^", crop:"200x200+0+0").processed %></p>
              <% end %>
            <% end %>
            <p class="icon_front rounded-circle border border-5"><%= image_tag illust.post.user.get_profile_image(100,100),class: "mr-3 rounded-circle d-block mx-auto" %></p>

            <div class="card-body d-flex flex-column align-items-center mt-3 pb-0">
              <%= link_to post_path(illust.post) do %>
                <span><%= illust.post.title.truncate(11) %></span>
              <% end %>
              <div class="m-0">
                <i class="fas fa-tags"></i>
                <% illust.post.tags.first(1).each do |tag| %>
                  <%= link_to tag.name.truncate(8), search_tag_path(tag_id: tag.id) %>
                  <%="(#{tag.posts.where(is_deleted: false).count})" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="row d-flex flex-column align-items-center mt-3">
        <ul class="pagination">
          <%= paginate @favorite_illusts, theme: 'twitter-bootstrap-4' %>
        </ul>
      </div>
    </div>
  </div>
</div>