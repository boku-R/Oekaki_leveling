<% if user != current_user && current_user.present? %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-secondary", remote: true %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-light", remote: true %>
  <% end %>
<% end %>