<div class="container-fluid py-3">
  <div class="row">
    <div class="col-6 offset-md-3 mx-auto">
      <%= flash[:alert] %>
      <div class="h4"><i class="fas fa-sign-in-alt"></i> ログイン</div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless text-right shadow p-3 rounded">
          <thead>
            <tr>
              <th scope="col" style="width: 30%"></th>
              <th scope="col" style="width: 70%"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="align-middle">
                <p>ユーザ名(半角英数字)</p>
              </td>
              <td>
                <div class="form-group">
                  <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", required: true %>
                </div>
              </td>
            </tr>
            <tr>
              <td>
                <p>パスワード</p>
              </td>
              <td>
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me, "ログイン情報を記憶する" %>
                    </div>
                  <% end %>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="actions d-flex justify-content-center">
          <%= f.submit "ログインする", class:"btn btn-secondary" %>
        </div>
      <% end %>
      <p class="text-right pt-4">アカウントをお持ちでない方は<%= link_to "こちら", new_user_registration_path , class:"h5" %></p>
    </div>
  </div>
</div>

<div class="container-fluid py-4">
  <div class="row">
    <div class="col-4 offset-md-4 shadow">
      <% if !current_user.present? && !current_admin.present? %>
        <table class="table table-borderless p-3 rounded">
          <tbody>
            <tr>
              <p class="text-center pt-4 mb-1">登録が面倒ですか？気軽に触ってみましょう！</p>
              <div class="p-0"><%= link_to 'ゲストログイン', users_guest_sign_in_path, class: "btn btn-outline-secondary btn-sm btn-block", method: :post %></div>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>