<div class="container-fluid py-3">
  <div class="row">
    <div class="col-md-8 offset-md-2 mx-auto">
      <%= flash[:alert] %>
      <div class="h4"><i class="fas fa-sign-in-alt"></i> 管理者ログイン</div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless text-right shadow p-3 rounded">
          <thead>
            <tr>
              <th scope="col" style="width: 30%"></th>
              <th scope="col" style="width: 70%"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="align-middle text-nowrap">
                <p>メールアドレス</p>
              </td>
              <td>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
                </div>
              </td>
            </tr>
            <tr>
              <td class="text-nowrap">
                <p>パスワード</p>
              </td>
              <td>
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me, "ログインを記憶" %>
                    </div>
                  <% end %>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="actions d-flex justify-content-center">
          <%= f.submit "ログインする", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
